[parity]
chain = "chain.json"
base_path = "parity_data"

[network]
port = 30333
nat = "none"

[rpc]
port = 38545
apis = ["web3", "eth", "net", "personal", "parity", "parity_set", "traces", "rpc", "parity_accounts"]
cors = ["all"]
hosts = ["all"]

[ipc]
apis = ["web3", "eth", "pubsub", "net", "parity", "parity_pubsub", "parity_accounts", "traces", "rpc", "shh", "shh_pubsub", "personal"]

[ui]
port = 38180
force = true

[websockets]
port = 38546

[account]
unlock = ["{{ home_signer_address }}"]
password = ["pass.pwd"]

[mining]
engine_signer = "{{ home_signer_address }}"
reseal_on_txs = "none"

[logging]
log_file = "{{ base_path }}/{{ home_name }}/logs/parity.log"
